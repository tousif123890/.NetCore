<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.NET Core File Upload with FileTable</title>

    <link rel="stylesheet" href="~/css/vendor.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body>
    <nav class="bg-dark mb-4 navbar navbar-dark navbar-expand-md">
        <a asp-controller="FileClient" asp-action="ViewAllFiles" class="navbar-brand">
            <em>ASP.NET Core FileUpload FileTable</em>
        </a>
        <button aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#topNavbarCollapse" data-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="topNavbarCollapse">
            <ul class="mr-auto navbar-nav">

                <li class="nav-item">
                    <a asp-controller="FileClient" asp-action="ViewAllFiles" class="nav-link">ViewAllFiles</a>
                </li>

                <li class="nav-item">
                    <a asp-controller="FileClient" asp-action="Client" class="nav-link">Upload File</a>
                </li>

                <li class="nav-item">
                    <a asp-controller="FileClient" asp-action="MultiClient" class="nav-link">Upload Multiple Files</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2021 - ASP.NET Core File Upload FileTable</p>
        </footer>
    </div>

    <script src="~/js/vendor.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
